<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registration_fragment_1_fullname"
        android:hint="@string/fullname"
        style="@style/DefaultTextStyle"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registration_fragment_1_nickname"
        android:hint="@string/nickname"
        style="@style/DefaultTextStyle"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/registration_fragment_1_fullname"
     />
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registration_fragment_1_next_button"
        style="@style/NextButtonStyle"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/registration_fragment_1_nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>